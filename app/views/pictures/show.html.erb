<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>投稿</h2>
    <p><div class="icon"><%= profile_img(@picture.user) %></div> <%= @picture.user.name %>が投稿しました</p>
    <p>
      <% if @picture.img? %>
        <div class="thumbnail">
          <%= image_tag @picture.img.url %>
        </div>
      <% end %>
    </p>
    <p><%= @picture.content %></p>
    <%= link_to '編集する', edit_picture_path(@picture), class: 'btn btn-primary btn-block' %>
    <%= link_to '一覧に戻る', pictures_path, class: 'btn btn-primary btn-block'  %>
  </div>
</div>
